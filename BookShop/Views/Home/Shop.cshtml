@model Tienda;


@{
    ViewData["Title"] = "Home Page";
}

<div class="container">
            <div class="row">
                <div class="col-sm-8" style="text-align: left;">
                    <h1>SHOP</h1>
                </div>
                <div class="col-sm-4" style="text-align: right;">
                    <div  style="align-items: right;"> 
                        <button id="card-button" type="button" class="btn btn-primary btn-circle btn-lg" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false"><i class="fas fa-shopping-cart"></i></button> 
                        <ul class="dropdown-menu dropdown-menu-right"> 
                            <li>
                                <a class="dropdown-item" href="#">Item 1</a>
                                <a class="dropdown-item" href="#">Item 2</a>
                                <a class="dropdown-item" href="#">Item 3</a>
                            </li> 
                        </ul> 
                    </div>
                </div>
            </div>
</div>
<div class="text-center">    
    <div class="container-body"> 
        <form class="form-inline d-flex">
          
            <div class="btn-group">
              
                 <select class="custom-select my-1 mr-sm-2" id="filtroGeneros">
                    <option selected>Categorias...</option>
                    @foreach (Genero genero in Model.Lista_generos)
                    {
                        <option id="@genero.ID">@genero.DescripcionGenero</option>
                    }
                </select>

            </div>
            <input class="form-control mr-sm-2" type="search" placeholder="Ingrese un libro..." aria-label="Search">
            <button class="btn btn-outline-dark my-2 my-sm-0" type="submit">Buscar</button>
        </form>
        <p style="text-align: left;">Aca deberia aparecer la categoria elegida</p>
        
    </div>
    
    <div class="container-body">
        <div id="container-libros" class="row row-cols-1 row-cols-md-3">
            @foreach (Libro libro in Model.Lista_libros)
            {
                <div class="col mb-4">
                    <div class="card h-100"> 
                        <img id="portada-libro" src=@libro.Portada  class="card-img-top" alt="..." style="width: 150px; height: 250px;">
                        <div class="card-body">
                            <h5 class="card-title">@libro.Titulo</h5>
                            <p class="card-text">@libro.Creador</p>
                            <div class="book-price">
                                <h5>$ @libro.Precio</h5>
                            </div> 
                            <div>
                                <button id="button-book" type="button" class="btn btn-outline-primary">Ver detalles</button>
                                <button id="button-add" class="btn btn-primary" type="submit"><i class="fas fa-shopping-cart"></i></button>
                            </div>
                        </div>
                    </div>
            </div>
            }
            

        </div>
    </div>   
</div> 
</div>
